{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "minimumReleaseAge": "7 days",
  "github-actions": {
    "enabled": true,
    "pinDigests": true
  },
  "includePaths": [
    ".ruby-version",
    "Gemfile",
    "yard-lint.gemspec",
    ".github/workflows/**"
  ],
  "packageRules": [
    {
      "description": "Group ruby/setup-ruby action with ruby version updates",
      "matchPackageNames": [
        "ruby/setup-ruby",
        "ruby"
      ],
      "groupName": "ruby setup"
    }
  ]
}
